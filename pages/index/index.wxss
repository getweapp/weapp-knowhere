/**index.wxss**/

.page__bd {
  padding-bottom: 0;
}

.news-item-container {
  background-color: #efefef;
  padding-top: 10rpx;
}

.weui-tab__content {
  text-align: center;
}

.news-item {
  background-color: white;
  margin-left: 10rpx;
  margin-right: 10rpx;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  align-items: stretch;
  margin-bottom: 16rpx;
}

.news-item-txt {
  align-self: stretch;
}

.news-item-txt {
    margin-left: 20rpx;
  margin-right: 20rpx;
  align-items: flex-start;
  justify-content: flex-start;
}

.news-item-name {
  flex: 1;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  color: #515151;

  font-size: 40rpx;
}

.news-item-state {
  font-size: 25rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  flex-direction: row;
  color: #7b7b7b;
}
.news-item-t{
  padding-left: 3rpx;
  padding-right: 3rpx
}